{
    "extends": "standard",
    "plugins": [],
    "env": {
         "node": true,
         "mocha": true,
         "es6": true
     },
     "parserOptions": {
         "ecmaVersion": 8,
         "sourceType": "module"
     },
    "rules": {
        "eol-last": "off",
        "space-before-function-paren": "off",
        "indent": ["error", 4],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always",{ "omitLastInOneLineBlock": true}],
        "one-var": ["off"],
        "space-before-blocks": ["off"],
        "camelcase": ["warn"]
    }
 }
