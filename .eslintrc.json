{
  "extends": "standard",
  "plugins": [],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "eol-last": "off",
    "space-before-function-paren": "off",
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always", { "omitLastInOneLineBlock": true }],
    "one-var": ["off"],
    "space-before-blocks": ["off"],
    "camelcase": ["warn"],
    "quote-props": ["error", "as-needed"]
  }
}
